@model MyVibes.Models.Song

@{
    ViewBag.Title = "DeleteConfirm";
}


<h2 class="title">Delete @Model.SongName</h2>
<div class="delete-container">
    <h2>Are you sure you want to delete this song?</h2>

    <form method="POST" action="/Song/Delete/@Model.SongID">
        <div class="input">
            <input type="submit" value="Confirm" class="button" />
        </div>
    </form>
    <div class="navbar">
        <a href="/Song/Detail/@Model.SongID">Cancel</a>
    </div>
</div>

